@{
}

@model List<EntityFrameWorkCore.Models.StudentModel>



<button class="btn-primary">
    <a class="nav-link text-dark text-white" asp-area="" asp-controller="Student" asp-action="InsertStudent">
        Add Student
    </a>
</button>

<form method="post">
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Faculty</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Gender</td>
                    <td>@student.Address</td>
                    <td>@student.Faculty</td>
                    <td>
                        <div class="d-flex flex-row">
                            <a class="btn btn-link" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>

                            <button class="btn btn-danger ms-3" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</button>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>